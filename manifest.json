{
  "manifest_version": 2,

  "name": "SoundCloud Power Button",
  "description": "Gives  you the Power",
  "version": "1.0",
  "web_accessible_resources": ["sc_ui_events.js"],
  "options_page": "settings/controls.html",
  "browser_action": {
    "default_icon": "icons/play.png"
  },
  "content_security_policy": "script-src 'self' https://connect.soundcloud.com/*; object-src 'self'",

  "permissions": [
    "activeTab",
    "tabs", "https://soundcloud.com/*",
    "https://ajax.googleapis.com/"
  ],
  "background" : {
    "scripts": ["background.js"]
  },
  "externally_connectable": {
  "matches": ["https://soundcloud.com/*"]
  },

  "commands": {
          "playback": {
            "suggested_key": {
              "default": "Ctrl+Shift+E",
              "mac": "Command+Shift+E"
            },
            "description": "Play/Pause"
          },

          "next": {
            "suggested_key": {
              "default": "Ctrl+Shift+E",
              "windows": "Alt+Shift+P",
              "mac": "Alt+Shift+P"
            },
            "description": "Skip(Next)"
          }
        },

  "content_scripts": [
    {
    "matches": ["https://soundcloud.com/*"],
    "js": ["myscript.js"],
    "run_at": "document_end"
    }
  ]

}
